<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90" >
            <shape
                android:innerRadiusRatio="1.8"
                android:shape="ring"
                android:thicknessRatio="16.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#e5e5e5"
                    android:endColor="#e5e5e5"
                    android:startColor="#e5e5e5"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90" >
            <shape
                android:innerRadiusRatio="1.8"
                android:shape="ring"
                android:thicknessRatio="16.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#01b36a"
                    android:endColor="#01b36a"
                    android:startColor="#01b36a"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>